<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/img_bakground_color"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="Healthcare"
        android:id="@+id/toolbar2"
        android:titleTextColor = "@color/white"
        android:background="@color/mtrl_textinput_default_box_stroke_color"

        />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002">


        <ImageView
            android:id="@+id/doctor_detail_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/doc1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fordoctor_profile"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="1.0">
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/doctor_detail_experience"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Over 10 years of experience"
            android:gravity="center"
            android:textSize="22sp">
        </TextView>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fordoctor_profile"
            android:gravity="start"
            android:orientation="vertical"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintVertical_bias="1.0">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_height="match_parent">
                <TextView
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginTop="10dp"
                    android:id="@+id/doctor_detail_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ludwig Philipp Albert "
                    android:textSize="22sp"/>

                <TextView
                    android:id="@+id/doctor_detail_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cardiologist"
                    android:textColor="#B5815656"
                    android:textSize="17sp" />

                <RatingBar
                    android:id="@+id/doctor_detail_ratingbar"
                    android:paddingTop="10dp"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4.7" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About "
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/doctor_detail_description"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:gravity="start"
                    android:justificationMode="inter_word"
                    android:layout_height="wrap_content"
                    android:text="Ludwig Philipp Albert Schweitzer OM was an  Alsatian German polymath. He was a theologian, organist, musicologist, writer, humanitarian, philosopher, and physician."></TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:layout_gravity="start"
                        android:background="@drawable/square_rating_style"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/doctor_detail_patient_appoinment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="427 "
                            android:gravity="center"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="20sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="Patients "
                            android:textSize="15sp"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginTop="13dp"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"

                        android:layout_marginRight="10dp"
                        android:padding="20dp"
                        android:layout_gravity="start"
                        android:background="@drawable/square_rating_style"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/doctor_detail_recommendations"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="399 "
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"

                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="Recommendation"
                            android:textSize="15sp"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:layout_marginTop="13dp"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:layout_gravity="start"
                        android:background="@drawable/square_rating_style"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/doctor_detail_total_rating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="155 "
                            android:gravity="center"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="Rating "
                            android:textSize="15sp"/>


                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/doctor_detail_appointment"
                    style="@style/MyButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textAllCaps="false"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#039be5"
                    android:gravity="center"
                    android:text="Book an Appointment"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>


