<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.MaterialComponents.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/mtrl_textinput_default_box_stroke_color</item>
        <item name="colorOnSurface">@color/mtrl_textinput_default_box_stroke_color</item>

    </style>

    <style name="MyButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
    </style>
    <style name="MyShapeAppearance">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="android:actionBarWidgetTheme">@style/MyActionBarWidgetTheme</item>
    </style>

    <style name="MyActionBarWidgetTheme" parent="@android:style/Theme.Holo">

        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">#00B0FF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="account_spinner" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">#0A0B0B</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>